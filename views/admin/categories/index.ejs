<%-include ('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(categories => { %>
            <tr>
                <th><%= categories.id  %></th>
                <th><%= categories.title  %></th>
                <th><%= categories.slug  %></th>
                <th>
                    <a href="/admin/categories/edit/<%= categories.id %>" class="btn btn-warning">Editar</a>
                    <form method="POST" action="/categories/delete" style="display: inline;"
                        onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= categories.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        var decision = confirm("Você quer deletar esta categoria?");
        if (decision) {
            form.submit();
        }
    }
</script>
<%-include ('../../partials/footer.ejs'); %>